@model IEnumerable<C500Hemis.Models.TbBaiBaoKhdaCongBo>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedcolumns/4.2.2/css/fixedColumns.bootstrap5.min.css">

    <style>
        body {
            font-family: 'lato', 'sans-serif';
            text-align: left;
            background: linear-gradient(to right, #e3f2fd, #bbdefb);
            overflow-x: auto;
        }

        .table {
            width: 90%;
            border-collapse: collapse;
        }

            .table th {
                color: white;
                background: linear-gradient(to right, #176B87, #4BB4DE);
                padding: 10px;
                border: 1px solid #ddd;
                text-align: center;
                white-space: nowrap;
            }

            .table td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: center;
                background-color: #f5f5f5;
            }

        a {
            text-decoration: none;
            color: #007bff;
        }

        .bang tbody tr:hover {
            background-color: #eef5ff;
            font-weight: bold;
        }

        a:hover {
            text-decoration: underline;
        }

        .btn-primary {
            background-color: #007BFF;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-edit {
            background-color: #F7F0C6;
        }

            .btn-edit:hover {
                background-color: #F4F2EF;
                transform: scale(1.05);
            }

        .btn-details {
            background-color: #C2C8C5;
        }

            .btn-details:hover {
                background-color: #DDDDDA;
                transform: scale(1.05);
            }

        .btn-delete {
            background-color: #CD4662;
        }

            .btn-delete:hover {
                background-color: #F4DBDB;
                transform: scale(1.05);
            }

        .btn-create {
            color: aliceblue;
            background-color: #5D7599;
        }

            .btn-create:hover {
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
                transform: scale(1.05);
            }

        .main-text {
            text-align: center;
            background: linear-gradient(to right, #176B87, #4BB4DE);
            color: white;
            font-weight: bold;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
    </style>
</head>
<div class="wrapper">
    <h1 class="main-text">BÀI BÁO KHOA HỌC ĐÃ CÔNG BỐ</h1>

    <p style="text-align:center">
        <a asp-action="Create" style="margin-left:6%;" class="btn btn-create">
            Tạo Mới <i class="fa-solid fa-plus"></i>
        </a>
    </p>

    <div class="bang">
        <table class="table" id="Tablelinh">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Chức năng</th>
                    <th>@Html.DisplayNameFor(model => model.MaBaiBaoKh)</th>
                    <th>@Html.DisplayNameFor(model => model.TenBaiBaoKh)</th>
                    <th>@Html.DisplayNameFor(model => model.TenTapChi)</th>
                    <th>@Html.DisplayNameFor(model => model.GhiChuDuongDanBaiBao)</th>
                    <th>@Html.DisplayNameFor(model => model.TapSo)</th>
                    <th>@Html.DisplayNameFor(model => model.Trang)</th>
                    <th>@Html.DisplayNameFor(model => model.NamCongBo)</th>
                    <th>@Html.DisplayNameFor(model => model.IdNhiemVuKhcnNavigation)</th>
                    <th>@Html.DisplayNameFor(model => model.IdTapChiQuocTeNavigation)</th>
                    <th>@Html.DisplayNameFor(model => model.IdTapChiTrongNuocNavigation)</th>
                    <th>@Html.DisplayNameFor(model => model.IdXepHangQNavigation)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td style="white-space: nowrap;">
                            <a asp-action="Edit" asp-route-id="@item.IdBaiBaoKhdaCongBo" class="btn btn-edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdBaiBaoKhdaCongBo" class="btn btn-details">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdBaiBaoKhdaCongBo" class="btn btn-delete">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.MaBaiBaoKh)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenBaiBaoKh)</td>
                        <td>@Html.DisplayFor(modelItem => item.TenTapChi)</td>
                        <td>@Html.DisplayFor(modelItem => item.GhiChuDuongDanBaiBao)</td>
                        <td>@Html.DisplayFor(modelItem => item.TapSo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Trang)</td>
                        <td>@Html.DisplayFor(modelItem => item.NamCongBo)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdNhiemVuKhcnNavigation.TenNhiemVu)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdTapChiQuocTeNavigation.TapChiKhoaHocQuocTe)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdTapChiTrongNuocNavigation.TapChiTrongNuoc)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdXepHangQNavigation.XepHangQ)</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>


<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap 5 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>

<!-- FixedColumns JS -->
<script src="https://cdn.datatables.net/fixedcolumns/4.2.2/js/dataTables.fixedColumns.min.js"></script>

<script>
    // Initialize DataTable
    $('#Tablelinh').DataTable({
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Vietnamese.json"
        },
        "paging": true,
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "scrollX": true,
        "scrollY": '300px',
        "scrollCollapse": true,
        "fixedColumns": {
            left: 2
        }
    });

    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
</script>
