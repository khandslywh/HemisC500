@model IEnumerable<C500Hemis.Models.TbSachDaXuatBan>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #e3f2fd, #bbdefb);
            font-family: 'Arial', sans-serif;
            padding: 20px;
        }

        h1 {
            text-align: center;
            background: linear-gradient(to right, #2196f3, #64b5f6);
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 30px;
            font-weight: bold;
        }

        .btn-create {
            display: inline-block;
            background-color: #2196f3;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

            .btn-create:hover {
                background-color: #1976d2;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
                transform: scale(1.05);
            }

        .table {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .table th {
                background: linear-gradient(to right, #42a5f5, #90caf9);
                color: white;
                text-align: center;
                padding: 10px;
            }

            .table td {
                text-align: center;
                padding: 10px;
            }

            .table tr:nth-child(even) {
                background-color: #f0f4f8;
            }

            .table tr:hover {
                background-color: #e3f2fd;
            }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <h1>Sách Đã Xuất Bản</h1>

    <p style="text-align: center;">
        <a asp-action="Create" class="btn-create">Thêm Sách Mới</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaSach)</th>
                <th>@Html.DisplayNameFor(model => model.TenSach)</th>
                <th>@Html.DisplayNameFor(model => model.MaChuanIsbn)</th>
                <th>@Html.DisplayNameFor(model => model.SoTrang)</th>
                <th>@Html.DisplayNameFor(model => model.Nxb)</th>
                <th>@Html.DisplayNameFor(model => model.NamXuatBan)</th>
                <th>@Html.DisplayNameFor(model => model.NamViet)</th>
                <th>@Html.DisplayNameFor(model => model.IdDangTaiLieuNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdLoaiSachTapChiNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdNhiemVuKhcnNavigation)</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaSach)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenSach)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaChuanIsbn)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoTrang)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nxb)</td>
                    <td>@Html.DisplayFor(modelItem => item.NamXuatBan)</td>
                    <td>@Html.DisplayFor(modelItem => item.NamViet)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdDangTaiLieuNavigation.IdDangTaiLieu)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdLoaiSachTapChiNavigation.IdLoaiSachTapChi)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdNhiemVuKhcnNavigation.IdNhiemVuKhcn)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdSachDaXuatBan">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.IdSachDaXuatBan">Chi tiết</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdSachDaXuatBan">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
