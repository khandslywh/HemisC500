@model IEnumerable<C500Hemis.Models.TbGiaiThuongKhoaHoc>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #f0f4c3, #c8e6c9);
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            background: linear-gradient(to right, #4caf50, #81c784);
            color: white;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 30px;
            font-weight: bold;
        }

        .btn-create {
            display: inline-block;
            background-color: #4caf50;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

            .btn-create:hover {
                background-color: #388e3c;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
                transform: scale(1.05);
            }

        .table {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            margin: auto;
        }

            .table th {
                background: linear-gradient(to right, #388e3c, #66bb6a);
                color: white;
                text-align: center;
                padding: 10px;
            }

            .table td {
                text-align: center;
                padding: 10px;
            }

            .table tr:nth-child(even) {
                background-color: #f1f8e9;
            }

            .table tr:hover {
                background-color: #dcedc8;
            }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <h1>Giải Thưởng Khoa Học</h1>

    <p style="text-align: center;">
        <a asp-action="Create" class="btn-create">Tạo Giải Thưởng Mới</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaGiaiThuong)</th>
                <th>@Html.DisplayNameFor(model => model.CoQuanToChucGiaiThuong)</th>
                <th>@Html.DisplayNameFor(model => model.TenDeTaiDuocTraoGiai)</th>
                <th>@Html.DisplayNameFor(model => model.TenDonViDuocTraoGiai)</th>
                <th>@Html.DisplayNameFor(model => model.QuyetDinhCapBangKhen)</th>
                <th>@Html.DisplayNameFor(model => model.CoQuanBanHanhQuyetDinh)</th>
                <th>@Html.DisplayNameFor(model => model.IdLoaiGiaiThuongNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.IdMucGiaiThuongNavigation)</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.MaGiaiThuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.CoQuanToChucGiaiThuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenDeTaiDuocTraoGiai)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenDonViDuocTraoGiai)</td>
                    <td>@Html.DisplayFor(modelItem => item.QuyetDinhCapBangKhen)</td>
                    <td>@Html.DisplayFor(modelItem => item.CoQuanBanHanhQuyetDinh)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdLoaiGiaiThuongNavigation.IdLoaiGiaiThuongKhcn)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdMucGiaiThuongNavigation.IdMucGiaiThuong)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdGiaiThuongKhoaHoc">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.IdGiaiThuongKhoaHoc">Chi tiết</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdGiaiThuongKhoaHoc">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
